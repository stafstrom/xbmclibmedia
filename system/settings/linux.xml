      <group id="1">
        <setting id="videoscreen.fakefullscreen">
          <visible>false</visible>
        </setting>
      </group>
    </category>
    <category id="input">
      <group id="2">
        <setting id="input.enablejoystick">
          <requirement>HAS_SDL_JOYSTICK</requirement>
